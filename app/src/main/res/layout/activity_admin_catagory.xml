<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCatagoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add Engineering Book"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/cse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cse"
            />

        <ImageView
            android:id="@+id/mech"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/mech"
            />

        <ImageView
            android:id="@+id/civil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/civil"
            />

        <ImageView
            android:id="@+id/electrical"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/electric"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/it"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/it"
            />

        <ImageView
            android:id="@+id/chemical"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/chemical"
            />

        <ImageView
            android:id="@+id/mechatronics"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mechatronics"
            />

        <ImageView
            android:id="@+id/ece"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/ece"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/slogan_category2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="411dp"
        android:text="Add Normal Book"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="385dp"
        android:layout_height="116dp"
        android:layout_below="@+id/linear3_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="152dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/law"
            android:layout_width="103dp"
            android:layout_height="96dp"
            android:src="@drawable/law" />

        <ImageView
            android:id="@+id/doctor"
            android:layout_width="80dp"
            android:layout_height="96dp"
            android:src="@drawable/doctor" />

        <ImageView
            android:id="@+id/ca"
            android:layout_width="79dp"
            android:layout_height="96dp"
            android:src="@drawable/ca" />

        <ImageView
            android:id="@+id/farming"
            android:layout_width="107dp"
            android:layout_height="96dp"
            android:src="@drawable/farming" />


    </LinearLayout>


</RelativeLayout>